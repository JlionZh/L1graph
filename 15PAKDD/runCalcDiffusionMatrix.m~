% calcualte the Graph Diffusion 
%
%
%

%% cosine similarity matrix
%% variable: G_cos
matrix = {'G_cos', 'G_fixed'};
T = 5;

for i = 1:length(matrix)

adj_sim = eval(matrix{i});
    
D = diag ( 1 ./ sum(adj_sim,1));

%% random walk matrix 
P = adj_sim*D;

%% graph diffusion
for step =1:T
    alpha = 1/(step+1);
    F = alpha*P^0;
    for j = 1:step
      F = F + alpha*P^j;
    end
end
end